int receiverpin = 11;
#include <Servo.h>
#include <IRremote.h>         	
IRrecv irrecv(receiverpin); 	
decode_results results; 


Servo motor1;
Servo motor2;
int sensor1 = 3;
int sensor2 = 4;

void setup(){
  Serial.begin(9600);
  irrecv.enableIRIn();
  int ir = 11;
pinMode(6,OUTPUT);
pinMode(9,OUTPUT);
  motor1.attach(10);
  pinMode(sensor1,INPUT);
  pinMode(sensor2,INPUT);
}

void MotorFoward () {
 Serial.print("Motor is on");
 
    for(int i=110; i<181; i++){
      motor1.write(i);
      motor2.write(i); 
    }
    
        for(int j=180; j>109; j--){
      motor1.write(j);
      motor2.write(j); 
    }
}

void MotorBack () {
 Serial.print("Motor is on");
 
    for(int i=25; i<110; i++){
      motor1.write(i);
      motor2.write(i); 
    }
    
        for(int j=109; j>25; j--){
      motor1.write(j);
      motor2.write(j); 
    }
}

void Sensor () {

          for(int i=0; i<110; i--){
      motor1.write(i);
      motor2.write(i); 
    }
    
           for(int j=0; j<110; j--){
      motor1.write(j);
      motor2.write(j); 
    }
    }







void loop(){
  
    sensor1 = digitalRead(3);
   sensor2 = digitalRead(4);
    
  if(irrecv.decode(&results)){
     	Serial.print(results.value,HEX);
     	Serial.print(" ");
	switch(results.value){

     case 0x490:
    MotorFoward();
    break;


     case 0xC90:
    MotorBack();
    break;
    
   default:
    break;
    
    if(sensor1==HIGH){
      Sensor();
    }
    
    if(sensor2==HIGH){
       Sensor();
    }
    
    
    
    
    


   for (int z = 0; z < 2; z++) {
     irrecv.resume();
 	}
  }
  }
}
