int receiverpin = 11;
#include <Servo.h>
#include <IRremote.h>         	
IRrecv irrecv(receiverpin); 	
decode_results results; 


Servo motor1;
Servo motor2;

void setup(){
  Serial.begin(9600);
  irrecv.enableIRIn();
  int ir = 11;
pinMode(6,OUTPUT);
pinMode(9,OUTPUT);
  motor1.attach(10);
}

void MotorFoward () {
 Serial.print("Motor is on");
 
    for(int i=110; i<181; i++){
      motor1.write(i);
      motor2.write(i); 
    }
    
        for(int j=180; j>109; j--){
      motor1.write(j);
      motor2.write(j); 
    }
}

void MotorBack () {
 Serial.print("Motor is on");
 
    for(int i=10; i<110; i++){
      motor1.write(i);
      motor2.write(i); 
    }
    
        for(int j=109; j>10; j--){
      motor1.write(j);
      motor2.write(j); 
    }
}



