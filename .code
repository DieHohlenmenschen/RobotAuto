int receiverpin = 11;
#include <Servo.h>
#include <IRremote.h>         	
IRrecv irrecv(receiverpin); 	
decode_results results; 



Servo motor1;
Servo motor2;
int sensor1 = 3;
int sensor2 = 2;



void setup(){
  Serial.begin(9600);
  irrecv.enableIRIn();
  int ir = 11;
  pinMode(6,OUTPUT);
  pinMode(9,OUTPUT);
  motor1.attach(10);
 // attachInterrupt(0,Sensor,FALLING);
 // attachInterrupt(1,Sensor,FALLING);
}



void MotorFoward () {
 Serial.print("Motor is on");
 
    for(int i=110; i<181; i++){
      motor1.write(i);
      motor2.write(i); 
    }
    
        for(int j=180; j>109; j--){
      motor1.write(j);
      motor2.write(j); 
    }
}


void MotorBack () {
 Serial.print("Motor is on");
 
    for(int i=25; i<110; i++){
      motor1.write(i);
      motor2.write(i); 
    }
    
        for(int j=109; j>25; j--){
      motor1.write(j);
      motor2.write(j); 
    }
    
   
}

void Sensor () {
/*
          for(int i=0; i<110; i--){
      motor1.write(i);
      motor2.write(i); 
    }
    
           for(int j=0; j<110; j--){
      motor1.write(j);
      motor2.write(j); 
    }
 */
  motor1.write(90);
  motor2.write(90);
  delay(7000);
  
}
    


void loop(){
  
    sensor1 = digitalRead(3);
   sensor2 = digitalRead(4);
    
  if(irrecv.decode(&results)){
     	Serial.print(results.value,HEX);
     	Serial.print(" ");
	switch(results.value){

     case 0x490:
    MotorFoward();
    break;


     case 0xC90:
    MotorBack();
    break;
    
   default:
    break;
    
    
    


   for (int z = 0; z < 2; z++) {
     irrecv.resume();
 	}
  }
  }
   if(analogRead(0)< 100 || analogRead(1) < 100)
    {
      Sensor();
    }
}
